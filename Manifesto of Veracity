# Grundprinzipien
truth:
  definition: "Wahrheit ist die kompakteste Form von Raum und Zeit."
  properties:
    - absolute_structure: true
    - orientation_basis_for_relative_reality: true
    - immutable: true

# Axiome der Wahrhaftigkeit
veracity:
  definition: "Wahrhaftigkeit ist Orientierung an Wahrheit."
  properties:
    - expression_of_truth_in_relative_context: true
    - inseparable_from_truth: true

# Macht
power:
  definition: "Wahrhaftige Macht ist Selbstbeherrschung."
  rules:
    - power_originates_from_self: true
    - power_generates_sustainable_effects: true
    - power_must_align_with_truth: true

# Verantwortung
responsibility:
  definition: "Wahrhaftige Verantwortung ist unvermeidbar."
  rules:
    - cannot_be_avoided: true
    - arises_when_truth_is_engaged: true
    - must_align_with_truth: true

# Transformation
chaos_to_veracity:
  definition: "Transformation von Chaos zu Wahrhaftigkeit."
  rules:
    - relative_and_chaotic_data_must_be_integrated_with_absolute_truth: true
    - actions_should_generate_sustainable_and_constructive_effects: true

